
#include <iostream>
#include <string>

using namespace std;


void messageBreak(){
    cout<<"\n";
    for(int i=0; i<50;i++)
    cout<<"=";
    cout<<"\n";
}

void WelcomeMessage(){
    cout<<"Welcome to Big's Burgers and fries!";
    messageBreak();
    cout<<"What would you like to order?\n1- Ala Carte Meal\n2-Combo meal";
    messageBreak();
}
int OrderType(){
    int Type;
    cin>>Type;
    while(Type != 1 && Type !=2){
        cout<<"\nThat is not a choice! Please choose 1 or 2!:";
        cin>>Type;
    }
    
    return Type;
}
class TakingOrders{
